{
  "name": "Trading Platform Dev Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",  // Main service for the app
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylint",
        "ms-vscode.vscode-typescript-tslint-plugin",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers"
      ]
    }
  },
  "forwardPorts": [
    8000,  // Django dev server (map to Apache on production)
    3000,  // React dev server
    3306,  // MariaDB (for local access; FirewallD equivalent: open 3306)
    6379   // Redis (FirewallD equivalent: open 6379 if needed)
  ],
  "portsAttributes": {
    "8000": { "label": "Django App", "onAutoForward": "notify" },
    "3000": { "label": "React Frontend", "onAutoForward": "notify" },
    "3306": { "label": "MariaDB", "onAutoForward": "silent" },
    "6379": { "label": "Redis", "onAutoForward": "silent" }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "remoteUser": "vscode"
}
